---
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import createSlug from "../../lib/createSlug";
import CardBlog from "@components/CardBlog.astro";
// import Skills from "@icons/Skills.astro";

export async function getStaticPaths({ paginate }) {
  const posts = await getCollection("blog");
  posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  return paginate(posts, { pageSize: 5 });
}
const { page } = Astro.props as any;
---

<BaseLayout title="Edgar Delgado - Blog" sideBarActiveItemID="NOTES_ACTIVE_PAGE">
  <section class="pb-3 mt-5">
    <div class="mb-5 mt-5" id="Notes">
      <div class="text-3xl w-full font-bold flex items-center">Blog</div>
    </div>
    {
      page.data.length === 0 ? (
        <div class="bg-base-200 border-l-4 border-secondary w-full p-4 min-w-full">
          <p class="font-bold">Sorry!</p>
          <p>There are no blog posts to show at the moment. Check back later!</p>
        </div>
      ) : (
        <ul>
          {page.data.map((post) => (
            <>
              <CardBlog
                title={post.data.title}
                img={post.data.heroImage}
                desc={post.data.description}
                url={"/blog/" + createSlug(post.data.title, post.slug)}
                target="_self"
                badge={post.data.badge}
                pubDate={post.data.pubDate}
                tags={post.data.tags}
              />
              {/* <div class="divider my-0" /> */}
            </>
          ))}
        </ul>
      )
    }

    <div class="flex justify-between gap-0">
      {
        page.url.prev ? (
          <a href={page.url.prev} class="btn btn-ghost my-10 mx-0 text-base">
            <svg
              class="h-6 w-6 fill-current md:h-8 md:w-8 ml-[-10px]"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              <path d="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
            </svg>
            Recent Posts
          </a>
        ) : (
          <div />
        )
      }
      {
        page.url.next ? (
          <a href={page.url.next} class="btn btn-ghost my-10 mx-0 text-base">
            Older Posts
            <svg
              class="h-6 w-6 fill-current  md:h-8 md:w-8 mr-[-10px]"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
            >
              <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" />
            </svg>
          </a>
        ) : (
          <div />
        )
      }
    </div>
  </section>
</BaseLayout>
