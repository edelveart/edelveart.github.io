---
import LinkedIn from "@icons/LinkedIn.astro";
import Youtube from "@icons/Youtube.astro";
import GitHub from "@icons/GitHub.astro";
import { SOCIAL_MEDIA } from "../config";

export interface Props {
  contactText?: string;
}
const { contactText } = Astro.props;
---

<div class="mt-8 mb-10 flex justify-start gap-4 flex-wrap">
  <a
    class="btn btm-nav-xs hover:scale-95 shadow-lg shadow-primary/30"
    href={SOCIAL_MEDIA.linkedin}
    target="_blank"
  >
    <LinkedIn class="w-6 animate-pulse" />
    {contactText}
  </a>
  <a class="btn btm-nav-xs hover:scale-95" href={SOCIAL_MEDIA.github} target="_blank">
    <GitHub class="w-6" />
  </a>
  <a class="btn btn-nav-xs hover:scale-95" href={SOCIAL_MEDIA.youtube} target="_blank">
    <Youtube class="w-6" />
  </a>
  <a
    class="btn btn-nav-xs hover:scale-95"
    href="./CURRICULUM LATEX EDGAR DELGADO.pdf"
    target="_blank">CV</a
  >

  <!-- <a
    class="btn btn-nav-label hover:scale-95"
    href="/Resume-Edgar-Delgado-LaTex-2024.pdf"
    download
    target="_blank"
    title="Descargar Curriculum Vitae"
  >
    CV
  </a> -->
</div>
