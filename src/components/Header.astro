---
const currentLang = Astro.url.pathname.startsWith("/es") ? "es" : "en";
export const spanishFlag = "fi fi-es";
export const englishFlag = "fi fi-gb";
---

<div
  class="sticky lg:hidden top-0 z-30 flex w-full justify-center transition-all duration-100 bg-base-200/25 backdrop-blur text-base-content mt-0 shadow-sm flex-wrap"
>
  <div class="navbar w-full md:px-5 sm:px-3">
    <div class="navbar-start">
      <label for="my-drawer" class="btn btn-square btn-ghost w-24 rounded-lg">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block w-7 h-7 stroke-current"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        {currentLang == "es" ? "Menú" : "Menu"}
      </label>
    </div>
    <div class="navbar-center">
      <!-- {
        currentLang === "es" ? (
          <a class="btn btn-ghost normal-case text-base font-bold" href="/es">
            Edgar Delgado
          </a>
        ) : (
          <a class="btn btn-ghost normal-case text-base font-bold" href="/">
            Edgar Delgado
          </a>
        )
      } -->
    </div>

    <div class="navbar-end">
      {
        currentLang === "es" ? (
          <a
            class="btn btn-ghost rounded-lg"
            href="/"
            title="Switch to English"
            aria-label="Switch to English"
          >
            <span class={`${englishFlag} w-6 h-6 mr-1`} />
            ENG
          </a>
        ) : (
          <a
            class="btn btn-ghost rounded-lg"
            href="/es"
            title="Cambiar a Español"
            aria-label="Cambiar a Español"
          >
            <span class={`${spanishFlag} w-6 h-6 mr-1`} />
            ESP
          </a>
        )
      }
    </div>
  </div>
</div>

<!-- PC VIEW -->
<div
  class="hidden lg:flex gap-x-4 flex-wrap justify-center sticky top-0 z-30 bg-base-200/50 backdrop-blur"
>
  <a class="text-base btn btn-ghost rounded-lg my-2 py-2" href="/" title="English">
    <span class={`mr-1  ${englishFlag}`}> </span>
    English
  </a>
  <a class="text-base btn btn-ghost rounded-lg my-2 py-2" href="/es" title="Español">
    <span class={`mr-1  ${spanishFlag}`}> </span>
    Español
  </a>
</div>
