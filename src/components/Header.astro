---
const currentLang = Astro.url.pathname.startsWith("/en") ? "en" : "es"
import { spanishFlag, englishFlag } from "./Languages.astro"
---

<div
  class="sticky lg:hidden top-0 z-30 flex h-16 w-full justify-center bg-opacity-90 backdrop-blur transition-all duration-100 bg-base-200 text-base-content shadow-sm mb-[-1rem] flex-wrap"
>
  <div class="navbar w-full">
    <div class="navbar-start">
      <label for="my-drawer" class="btn btn-square btn-ghost">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block w-8 h-7 stroke-current"
          ><path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>
    <div class="navbar-center">
      {
        currentLang === "es" ? (
          <a class="btn btn-ghost normal-case text-xl" href="/">
            Edgar Delgado Vega
          </a>
        ) : (
          <a class="btn btn-ghost normal-case text-xl" href="/en">
            Edgar Delgado Vega
          </a>
        )
      }
    </div>

    <div class="navbar-end">
      {
        currentLang === "es" ? (
          <a href="/en">
            <span class={`btn btn-square btn-ghost ${englishFlag} w-8 mx-3`} />
          </a>
        ) : (
          <a href="/">
            <span class={`btn btn-square btn-ghost ${spanishFlag} w-8 mx-3`} />
          </a>
        )
      }
    </div>
  </div>
</div>
