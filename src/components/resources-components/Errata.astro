---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="mb-10">
  <h2 class="text-2xl font-semibold my-5">{title}</h2>
  <ul class="flex flex-col list-disc ml-4 gap-y-2">
    <li>
      <a
        class="text-primary hover:underline"
        href="/resources-files/errata-phd-thesis-cannas.pdf"
        title="Errata of PhD thesis by Sonia Cannas (2018) in PDF format"
        target="_blank"
        rel="noopener"
        >Errata de la tesis doctoral (PhD) <em
          >Geometric Representation and Algebraic Formalization of Musical Structures</em
        > (2018) - PDF</a
      >
    </li>
    <li>
      <a
        class="text-primary hover:underline"
        href="/resources-files/errata-figuratenum.pdf"
        title="Errata of Figurate Numbers (2012) in PDF format"
        target="_blank"
        rel="noopener"
        >Errata of <em> Figurate Numbers</em> (2012) - PDF
      </a>
    </li>
  </ul>
</section>
