---
const { title, img, desc, url, badge, pubDate, tags, target = "_blank" } = Astro.props;
// import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";

// PubDATE from md files
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";
dayjs.extend(localizedFormat);
const displayDate = dayjs(pubDate).format("ll");
---

<div class="rounded-lg bg-base-100 px-0 my-10">
  <div class="flex-col md:flex-row">
    <div class="grow w-full">
      {pubDate && <time class="text-lg">{displayDate}</time>}
      <h1 class="text-2xl font-bold flex flex-row pb-2 mt-3">
        # {title}
      </h1>
      <p class="py-1 text-md">{desc}</p>
      <div class="card-actions justify-start mt-3 gap-3 items-baseline">
        {
          tags &&
            tags.map((tag) => (
              <a
                href={`${tag_url}/${tag}`}
                class="badge badge-neutral badge-sm rounded-md p-3 hover:badge-secondary  ease-in-out duration-200 "
              >
                {tag}
              </a>
            ))
        }
      </div>
      <a
        href={url}
        target={target}
        class="badge badge-outline p-4 mx-0 mb-2 text-base rounded-md hover:badge-secondary hover:bg-inherit ease-in-out duration-100 mt-6"
      >
        Read
        <svg
          class="h-6 w-6 fill-current md:h-8 md:w-8 mr-[-.5rem]"
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
        >
          {" "}
          <path d="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
