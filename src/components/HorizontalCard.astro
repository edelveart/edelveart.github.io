---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
const tag_url = url.split("/").slice(0, -1).join("/") + "/tag";

export type ProjectType = {
  title: string;
  img: ImageMetadata | string;
  desc: string;
  url: string;
  badge: string;
};
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition duration-200 ease-in-out hover:bg-base-300"
>
  <a href={url} target={target} rel="noopener">
    <div class="hero-content flex-col md:flex-row rounded-lg shadow-sm shadow-primary/50 p-6">
      <div class="grow w-full">
        {badge && <div class="badge badge-primary mb-2">{badge}</div>}
        <h1 class="text-lg font-semibold">
          {title}
        </h1>
        <p class="text-pretty py-1 text-1xl">{desc}</p>
      </div>
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
    </div>
  </a>
</div>
