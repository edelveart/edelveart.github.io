---
import Home from "@icons/Home.astro";
import Branch from "@icons/Branch.astro";
import Curriculum from "@icons/Curriculum.astro";
// import PencilEducation from "@icons/PencilEducation.astro";
type Props = {
  sideBarActiveItemID: unknown;
  homeMenu: string;
  projectsMenu: string;
  cvMenu: string;
  hrefHome: string;
  hrefProjects: string;
  hrefCV: string;
};
const { sideBarActiveItemID, homeMenu, projectsMenu, cvMenu, hrefHome, hrefProjects, hrefCV } =
  Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
export const sideMenuCss = {
  divCss: "py-3  md:justify-start",
  spanText: "text-xl md:text-sm",
};
---

<ul class="menu grow shrink menu-md overflow-y-auto">
  <strong class="flex justify-center mb-5 text-2xl md:text-base">Edgar Delgado Vega</strong>
  <li>
    <a class=`${sideMenuCss.divCss}` id="home" href={hrefHome}
      ><Home />
      <span class=`${sideMenuCss.spanText}`>{homeMenu}</span>
    </a>
  </li>
  <li>
    <a class=`${sideMenuCss.divCss}` id="projects" href={hrefProjects}
      ><Branch />

      <span class=`${sideMenuCss.spanText}`>{projectsMenu}</span>
    </a>
  </li>
  <li>
    <a class=`${sideMenuCss.divCss}` id="cv" href={hrefCV}>
      <Curriculum />
      <span class=`${sideMenuCss.spanText}`>{cvMenu}</span>
    </a>
  </li>
  <!-- <li>
    <a class=`${sideMenuCss.divCss}` id="blog" href="/blog">
      <PencilEducation />
      <span class=`${sideMenuCss.spanText}`>Blog</span>
    </a>
  </li> -->
  <li>
    <!-- <li><a class="py-3 text-base" id="projects" href="/projects">Projects</a></li> -->
    <!-- <li><a class="py-3 text-base" id="services" href="/services">Services</a></li> -->
    <!-- <li><a class="py-3 text-base" id="store" href="/store">Store</a></li> -->
    <!-- <li><a class="py-3 text-base" id="blog" href="/blog/">Blog</a></li> -->
    <!-- <li><a class="py-3 text-base" id="cv" href="/cv">CV</a></li> -->
  </li>
</ul>

<script
  define:vars={{
    sideBarActiveItemID: sideBarActiveItemID,
    activeClass: activeClass,
  }}
>
  const activeItemElem = document.getElementById(sideBarActiveItemID);
  activeItemElem && activeItemElem.classList.add(activeClass);
</script>
